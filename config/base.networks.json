{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "description": "Configuration files that define RPC URLs, explorers, and chainIds for Base networks.",
  "networks": {
    "base-mainnet": {
      "name": "Base Mainnet",
      "chainId": 8453,
      "nativeCurrency": {
        "name": "Ether",
        "symbol": "ETH",
        "decimals": 18
      },
      "rpc": {
        "default": "https://mainnet.base.org",
        "fallbacks": [
          "https://base.llamarpc.com",
          "https://rpc.ankr.com/base"
        ]
      },
      "explorer": {
        "name": "BaseScan",
        "url": "https://basescan.org"
      },
      "testnet": false
    },
    "base-sepolia": {
      "name": "Base Sepolia",
      "chainId": 84532,
      "nativeCurrency": {
        "name": "Sepolia Ether",
        "symbol": "ETH",
        "decimals": 18
      },
      "rpc": {
        "default": "https://sepolia.base.org",
        "fallbacks": [
          "https://base-sepolia-rpc.publicnode.com"
        ]
      },
      "explorer": {
        "name": "BaseScan Sepolia",
        "url": "https://sepolia.basescan.org"
      },
      "testnet": true
    }
  },
  "defaults": {
    "network": "base-sepolia",
    "rpcTimeoutMs": 10000,
    "confirmations": 2
  }
}
